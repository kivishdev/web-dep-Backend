<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
    <div class="w-full h-full p-10">
        <a class="text-blue-500 mt-10 mb-10 block" href="/">Back to Home</a>
        <h1 class="text-3xl tracking-tight mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% if (users.length > 0) { %>
                <% users.forEach(function(user){ %>
                    <div class="user w-72 h-96 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tight mt-3 mb-1"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 mt-3">
                            <a class="text-zinc-600" href="/edit/<%= user._id %>">Edit</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-500">No users yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>