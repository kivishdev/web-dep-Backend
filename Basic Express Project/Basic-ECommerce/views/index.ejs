<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>E-commerce Backend Practice</title>
  
  <style>
    /* --- POORA CSS SIMPLIFY KAR DIYA HAI --- */
    body {
      font-family: sans-serif;
      margin: 0;
      background-color: #f4f4f4;
    }
    
    /* Header/Nav */
    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      background-color: #fff;
      border-bottom: 1px solid #ddd;
    }
    .topbar h1 {
      margin: 0;
      font-size: 24px;
    }
    .search input {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .cart-btn {
      position: relative;
      padding: 8px 12px;
      cursor: pointer;
      border: 1px solid #ccc;
      background-color: #f9f9f9;
      border-radius: 5px;
    }
    .cart-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      background-color: #0b74ff;
      color: white;
      border-radius: 50%;
      padding: 2px 6px;
      font-size: 12px;
    }
    
    /* Page Content */
    .container {
      max-width: 1000px;
      margin: 20px auto;
      padding: 0 20px;
    }
    
    /* Product Grid */
    .product-grid {
      display: flex;
      flex-wrap: wrap; /* Simple responsive grid */
      gap: 15px;
    }
    
    /* Product Card */
    .product-card {
      width: 200px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      display: flex; /* Added for footer */
      flex-direction: column; /* Added for footer */
    }
    .product-card .price {
      font-weight: bold;
      color: #333;
      margin: 10px 0;
    }
    .product-card .desc {
      font-size: 14px;
      color: #666;
      margin-bottom: 15px;
    }
    .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: auto; /* Pushes footer to bottom */
    }
    .btn {
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .btn-primary {
      background-color: #0b74ff;
      color: white;
    }
    .btn-light {
      background-color: #eee;
    }
    
    /* Cart Drawer */
    .drawer {
      position: fixed;
      top: 0;
      right: -320px; /* Off-screen */
      width: 300px;
      height: 100%;
      background-color: #fff;
      border-left: 1px solid #ccc;
      padding: 20px;
      box-shadow: -3px 0 10px rgba(0,0,0,0.1);
      transition: right 0.3s ease;
      z-index: 50;
    }
    .drawer.open {
      right: 0; /* Slide in */
    }
    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid #eee;
    }
    .cart-item-info {
      flex-grow: 1;
      margin-left: 10px;
    }
    .cart-total {
      margin-top: 20px;
      font-weight: bold;
      font-size: 18px;
    }
    
  </style>
</head>
<body>

  <header class="topbar">
    <h1><a href="/" style="text-decoration: none; color: inherit;">EzCart</a></h1>

    <form action="/search" method="GET" class="search">
      <input name="query" placeholder="Search..."/>
    </form>

    <div class="actions">
      <a href="/cart" class="cart-btn" title="Open cart page">
        <span>Cart</span>
        <span class="cart-badge" id="cartCount">
          <%= cartItemCount || 0 %>
        </span>
      </a>
    </div>
  </header>

  <main class="container">
    <h2>Our Products</h2>
    <section class="product-grid" id="productGrid">
      
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
        
        <article class="product-card">
            
            <h3><%= product.title.slice(0, 20) %>...</h3> 
            
            <div class="price">₹<%= product.price %></div> 
            
            <div class="desc"><%= product.description.slice(0, 50) %>...</div>
            
            <div class="card-footer">
                <button class="btn btn-light">View</button>
                
                <form action="/add-to-cart" method="POST">
                    <input type="hidden" name="ProdId" value="<%= product.id %>">
                    <input type="hidden" name="Prodname" value="<%= product.title %>">
                    <input type="hidden" name="ProdPrice" value="<%= product.price %>">
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </article>
    
        <% }) %>
      <% } else { %>
        <p>No products found. Try searching for something else?</p>
      <% } %>
      </section>
  </main>

  <aside class="drawer" id="cartDrawer">
    <h3>Your Cart</h3>

    <div id="cartItems">
      <div class="cart-item">
            <div class="cart-item-info">
              <div><strong>Classic Sneakers</strong></div> <div>₹2499 x 1</div> </div>
            <button class="btn btn-light">-</button>
          </div>

        <div id="cartEmpty">No items in the cart yet.</div>
      </div>
    
    <div class="cart-total">
      Total: <span id="cartTotal">₹2499</span>
    </div>

    <form action="/checkout" method="POST" style="margin-top: 15px;">
      <button class="btn btn-primary" id="checkoutBtn" style="width: 100%;">Checkout</button>
    </form>
  </aside>

  <script>
    const cartDrawer = document.getElementById('cartDrawer');
    const cartToggle = document.getElementById('cartToggle');
    
    // Yahaan pe galti thi, cartToggle ab 'a' tag hai, 
    // isliye JavaScript ki zaroorat nahi hai drawer kholne ke liye
    // Agar aapko drawer (slide-out) page pe jaana hai, toh yeh code hata dein.
    // Agar aapko drawer (slide-out) page pe nahi jaana hai, toh header waala 'a' tag ko 'button' me badlein.
    
    // Abhi ke liye, maan lete hain ki aapko /cart page pe jaana hai, 
    // isliye JavaScript ki zaroorat nahi hai.
    
    /* // Agar drawer (slide-out) use karna hai, toh header me yeh code use karein:
    <button class="cart-btn" id="cartToggle">
      ...
    </button>
    
    // Aur yeh JavaScript use karein:
    cartToggle.addEventListener('click', () => {
      cartDrawer.classList.toggle('open');
    });
    */
  </script>

</body>
</html>